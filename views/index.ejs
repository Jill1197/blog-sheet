<h2>Latest Posts</h2>
<% posts.forEach(p => { %>
  <div class="post">
    <% if(p.image_url){ %>
      <img src="<%= p.image_url %>" alt="<%= p.title %>" class="post-img">
    <% } %>
    <h3><a href="/post/<%= p.id %>"><%= p.title %></a></h3>
    <p><%= p.content.slice(0, 150) %>...</p>
  </div>
<% }) %>
